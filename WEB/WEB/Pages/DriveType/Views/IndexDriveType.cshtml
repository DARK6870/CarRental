@model IEnumerable<WEB.Pages.DriveType.Drive_type>

@{
    ViewData["Title"] = "Index";
}


<div class="f" style="margin-left: 200px; margin-right: 200px;">
    <b style="font-size: 40px">Data</b>

<p>
    <a asp-action="CreateDriveType">Create New</a>
</p>
    <table class="table table-striped table-bordered rounded custom-table" style="border-radius: 10px; overflow: hidden;">
    <thead>
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(model => model.drive_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.drive_name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.drive_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.drive_name)
            </td>
            <td>
                <a asp-action="EditDriveType" asp-route-id="@item.drive_id">Edit</a> |
                <a asp-action="DeleteDriveType" asp-route-id="@item.drive_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
