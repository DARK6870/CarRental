@model WEB.Pages.Fuel.Fuel
@{
    ViewData["Title"] = "Edit";
}

<div style="margin-left: 200px; margin-right: 200px;">
    <b style="font-size: 40px">Edit</b>
<h4>Fuel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
            <form asp-action="EditFuel" onsubmit="return confirm('Are you sure you want to do this?')">
            <div requerd class="text-danger"></div>
            <input type="hidden" asp-for="fuel_id" />
            <div class="form-group">
                <input required maxlength="10" asp-for="fuel_name" class="form-control" />
                <span asp-validation-for="fuel_name" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexFuel">Back to List</a>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
