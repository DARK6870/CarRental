@model IEnumerable<WEB.Pages.Cars.Models.Cars>

@{
    ViewData["Title"] = "Home Page";
}

<div class="banner mt-0">
    <div class="jumbotron d-flex flex-column align-items-start">
        <h1 class="display-4 text-white wow fadeInRight" data-wow-delay="0.5s">Find your best car!</h1>
        <p class="lead text-white wow fadeInRight" data-wow-delay="0.5s">Achieve a unique experience by selecting our cars</p>
        <hr class="my-4">
        <a class="btn btn-info btn-lg align-self-start wow fadeInRight" data-wow-delay="1s" asp-area="" asp-controller="Car" asp-action="Cars" role="button">View Cars</a>
    </div>
</div>
<div class="mt-4 wow fadeInUp" style="display: flex; flex-direction: column; align-items: center; text-align: center;" data-wow-delay="1.5s">
    <h1 style="color: gray;">Recommended for you</h1>
    <p style="color: darkgray;">Driving your dreams to reality with an exquisite fleet of versatile vehicles for unforgettable journeys.</p>
</div>

<div class="cards">
    <div class="row">
        @try
        {
            @foreach (var cars in Model.Take(3))
            {
                <div class="col-lg-4 col-md-6 col-sm-12 mb-4 wow fadeInUp" data-wow-delay="2s">
                    <div class="card">
                        <img src="@cars.imagepath" class="card-img-top" alt="Car 1" style="width: 100%; height: 350px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@cars.car_name</h5>
                            <p class="card-text">Transmission: @cars.transmission_name</p>
                            <p class="card-text">
                                <img src="/images/fuel.png" alt="Fuel Icon" style="width: 20px; height: 20px; vertical-align: middle;">
                                @cars.fuel_name
                            </p>
                            <p class="card-text">Price: $@cars.price</p>
                            <a id="confirmButton" class="btn btn-outline-primary" href="@Url.Action("Rent", "Car", new { id = cars.car_id })">Rent Now</a>
                        </div>
                    </div>
                </div>
            }
        }
        catch
        {

        }
    </div>
</div>

<style>
    .banner {
        background-image: url(/images/banner.jpg);
        background-size: cover;
        background-position: center;
        height: 600px; /* Height of the banner */
    }

    .jumbotron {
        position: absolute;
        top: 30%;
        left: 10%; /* Left margin */
        transform: translate(0, -50%);
        color: #ffffff;
    }

    .cards {
        margin-top: 20px;
        margin-left: 20px;
        margin-right: 20px;
        max-height: 600px;
    }

    .col-md-4 {
        /* Adjust the width of the cards for medium screens */
        flex: 0 0 33.33%;
        max-width: 33.33%;
    }

    .col-sm-6 {
        /* Adjust the width of the cards for small screens */
        flex: 0 0 50%;
        max-width: 50%;
    }
</style>
