@model WEB.Pages.Cars.Models.NewCar

@{
    ViewData["Title"] = "Create";
}

<div class="f" style="margin-left: 200px; margin-right: 200px;">
    <b style="font-size: 40px">Create</b>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
            <form asp-action="Create" onsubmit="return confirm('Are you sure you want to do this?')">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="car_name" class="control-label"></label>
                <input asp-for="car_name" class="form-control" required maxlength="25"/>
                <span asp-validation-for="car_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="type_id" class="control-label"></label>
                <select required class="form-select border border-secondary" id="type_id" onchange="updateInputValue(this, 'CT')">
                <option value=""></option>
                @foreach (var item in Model.CarType)
                {
                    <option value="@item.type_id">@item.car_type_name</option>
                }
                </select>
                <input type="text" hidden class="w-100" id="CT" required name="type_id">
            </div>
            <div class="form-group">
                <label asp-for="body_id" class="control-label"></label>
                <select required class="form-select border border-secondary" id="body_id" onchange="updateInputValue(this, 'BT')">
                <option value=""></option>
                @foreach (var item in Model.BodyType)
                {
                    <option value="@item.body_id">@item.body_name</option>
                }
                    <input type="text" hidden class="w-100" id="BT" required name="body_id">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="transmission_id" class="control-label"></label>
                <select required class="form-select border border-secondary" id="transmission_id" onchange="updateInputValue(this, 'TR')">
                <option value=""></option>
                @foreach (var item in Model.Transmission)
                {
                    <option value="@item.transmission_id">@item.transmission_name</option>
                }
                </select>
                <input type="text" hidden class="w-100" id="TR" required name="transmission_id">
            </div>
            <div class="form-group">
                <label asp-for="num_seats" class="control-label"></label>
                <input required min="1" asp-for="num_seats" class="form-control" />
                <span asp-validation-for="num_seats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fuel_id" class="control-label"></label>
                <select required class="form-select border border-secondary" id="fuel_id" onchange="updateInputValue(this, 'F')">
                <option value=""></option>
                @foreach (var item in Model.Fuels)
                {
                    <option value="@item.fuel_id">@item.fuel_name</option>
                }
                </select>
                <input type="text" hidden class="w-100" id="F" required name="fuel_id">
            </div>
            <div class="form-group">
                <label asp-for="drive_id" class="control-label"></label>
                <select required class="form-select border border-secondary" id="drive_id" onchange="updateInputValue(this, 'DT')">
                    <option value=""></option>
                    @foreach (var item in Model.Drive_type)
                    {
                        <option value="@item.drive_id">@item.drive_name</option>
                    }
                </select>
                <input type="text" hidden class="w-100" id="DT" required name="drive_id">
            </div>
            <div class="form-group">
                <label asp-for="price" class="control-label"></label>
                <input required min="1" asp-for="price" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="imagepath" class="control-label"></label>
                <input required asp-for="imagepath" class="form-control" />
                <span asp-validation-for="imagepath" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexCar">Back to List</a>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


<script>
    function updateInputValue(selectElement, inputId) {
        var inputElement = document.getElementById(inputId);
        var selectedOption = selectElement.options[selectElement.selectedIndex];
        inputElement.value = selectedOption.value;
    }

</script>