@model WEB.Pages.Cars.Models.Car

@{
    ViewData["Title"] = "Edit";
}

<div class="f" style="margin-left: 200px; margin-right: 200px;">
    <b style="font-size: 40px">Edit</b>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="car_id" />
            <div class="form-group">
                <label asp-for="car_name" class="control-label"></label>
                <input required maxlength="25" asp-for="car_name" class="form-control" />
                <span asp-validation-for="car_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="type_id" class="control-label"></label>
                <input required min="1" asp-for="type_id" class="form-control" />
                <span asp-validation-for="type_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="body_id" class="control-label"></label>
                <input required min="1" asp-for="body_id" class="form-control" />
                <span asp-validation-for="body_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="transmission_id" class="control-label"></label>
                <input required min="1" asp-for="transmission_id" class="form-control" />
                <span asp-validation-for="transmission_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="num_seats" class="control-label"></label>
                <input required min="1" asp-for="num_seats" class="form-control" />
                <span asp-validation-for="num_seats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fuel_id" class="control-label"></label>
                <input required min="1" asp-for="fuel_id" class="form-control" />
                <span asp-validation-for="fuel_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="drive_id" class="control-label"></label>
                <input required min="1" asp-for="drive_id" class="form-control" />
                <span asp-validation-for="drive_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="price" class="control-label"></label>
                <input required min="1" asp-for="price" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="imagepath" class="control-label"></label>
                <input required maxlength="20" asp-for="imagepath" class="form-control" />
                <span asp-validation-for="imagepath" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexCar">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</div>